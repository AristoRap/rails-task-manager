<h1>My tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <li class='mb-3'>
  <%= link_to task.title, task_path(task), class: 'lead' %>
  <%= link_to "X",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: 'btn-sm btn-outline-danger' %>

  </li>
<% end %>
</ul>
<%= link_to "New task", new_task_path(), class: 'btn btn-primary' %>
